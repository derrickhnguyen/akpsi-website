extends layout

block content
	div.container(class='top-bot-space text-center')
		div.row(class='top-space')
			- for (var x = 0; x < activeBrothers.length; x++)
				if ((x % 4) === 0)
					div.col-md-2.col-md-offset-2.col-sm-3.col-xs-6
						div
							a.img-responsive(href=activeBrothers[x].img.lg, data-lightbox='groupies', data-title=activeBrothers[x].name)
								img.img-responsive.headshot(src=activeBrothers[x].img.sm, alt=activeBrothers[x].name)
								span(class=activeBrothers[x].order) #{activeBrothers[x].name}
				else 
					div.col-md-2.col-sm-3.col-xs-6
						div
							a.img-responsive(href=activeBrothers[x].img.lg, data-lightbox='groupies', data-title=activeBrothers[x].name)
								img.img-responsive.headshot(src=activeBrothers[x].img.sm, alt=activeBrothers[x].name)
								span(class=activeBrothers[x].order) #{activeBrothers[x].name}

		div.row.top-space
			div.col-md-6.col-md-offset-3
				p 
					b Not pictured:
					- for (var x = 0; x < notPictured.length; x++)
						|  #{notPictured[x].name},

	include ./includes/backtotop.pug
	include ./includes/footer.pug